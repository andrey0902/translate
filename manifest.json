{
  "manifest_version": 2,
  "name":"Habrahabr Demo",
  "version":"2",
  "description":"Demo plugin",

  "content_scripts":[{
    "matches":["http://*/*","https://*/*"],
    "css": ["mystyles.css"],
    "js":["script.js"]
  }],
  "permissions": [
    "https://translate.google.com/*",
    "contextMenus",
    "tabs",
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_title": "Open translator",
    "default_popup": "popup.html"
  },

  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
  "https://use.fontawesome.com/*"
  ]
}